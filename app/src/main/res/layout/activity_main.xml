    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >
    <Button
        android:onClick="btn1"
        android:layout_width="match_parent"
        android:text="开始定位"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvMap"
        android:layout_width="match_parent"
        android:text="定位中。。。"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="btn2"
        android:layout_width="match_parent"
        android:text="开始导航"
        android:layout_height="wrap_content"/>
</LinearLayout>
